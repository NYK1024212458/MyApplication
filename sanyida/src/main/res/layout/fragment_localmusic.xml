<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/localMusicLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:src="@mipmap/mobile" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="10.0dip">

            <TextView
                android:id="@+id/tv_local_music1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="本地音乐"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/tv_local_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_local_music1"
                android:paddingLeft="3.0dip"
                android:text="(0)"
                android:textColor="#ffc7c7c7"
                android:textSize="13.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/divider_line" />
        </RelativeLayout>
    </LinearLayout>
    <!-- android:visibility="gone"-->
    <LinearLayout
        android:id="@+id/downloadLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10.0dip"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:src="@mipmap/download1" />

        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="10.0dip">

            <TextView
                android:id="@+id/tv_local_downloaded1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="下载管理"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/tv_local_downloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_local_downloaded1"
                android:paddingLeft="3.0dip"
                android:text="(0)"
                android:textColor="#ffc7c7c7"
                android:textSize="13.0sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/divider_line" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlPrivate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light">

        <ImageView
            android:id="@+id/iv_my_list_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="8.0dip"
            android:src="@mipmap/collapse_arrow" />

        <TextView
            android:id="@+id/tv_my_list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_my_list_arrow"
            android:text="歌单"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/tv_my_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_my_list1"
            android:paddingLeft="3.0dip"
            android:text="(0)"
            android:textColor="#ffc7c7c7"
            android:textSize="13.0sp" />

        <ImageView
            android:id="@+id/iv_list_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5.0dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="20.0dip"
            android:paddingTop="5.0dip"
            android:src="@mipmap/single_operation" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_song_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>